<script>
function login() {
    document.getElementById("loginPage").classList.add("hidden");
    document.getElementById("dashboard").classList.remove("hidden");
}

function changeGrade(id) {
    let newGrade = prompt("Enter new grade:");
    if(newGrade){
        document.getElementById(id).innerText =
        "Current Quarter 3 HS Grade: " + newGrade;
    }
}

function addAssignment(sectionId) {
    let name = prompt("Assignment name:");
    let score = prompt("Score:");
    if(name && score){
        let p = document.createElement("p");
        p.innerText = name + " - " + score;
        document.getElementById(sectionId).appendChild(p);
    }
}
</script>

